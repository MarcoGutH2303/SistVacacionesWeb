
@{
    ViewBag.Title = "Reporte Autorización";
}

<ol class="breadcrumb mb-3 mt-3">
    <li class="breadcrumb-item active">Reportes</li>
    <li class="breadcrumb-item active">Autorizacion</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-user-cog"></i> Reporte - Autorizacion
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-2 mb-1 d-flex align-items-center">
                <label>Tipo Reporte</label>
            </div>
            <div class="col-md-3 mb-1">
                <select name="tipo_reporte" class="form-control" id="cboTipoReporteAutorizacion" onchange="ChangeAutorizacion()">
                    <option value="0">--Seleccione--</option>
                    <option value="1">Personal</option>
                    <option value="2">General</option>
                    <option value="3">Por Fechas</option>
                </select>
            </div>
            <div class="col-md-2 mb-1 d-flex align-items-center">
                <label>Nombre Personal</label>
            </div>
            <div class="col-md-4 mb-1 d-flex align-items-center">
                <input type="text" id="NombrePersonalAutorizacion" disabled class="form-control" />
                <input type="text" id="CodPersonalAutorizacion" hidden class="form-control" />
            </div>
            <div class="col-md-1 mb-1">
                <button class="btn btn-primary d-block w-100" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="BuscarPersonalAutorizacion()" id="btnBuscarPersonalAutorizacion" disabled><span class="fas fa-search"></span></button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 d-flex align-items-center">
                <label>Fecha Inicio</label>
            </div>
            <div class="col-md-3 mb-1">
                <input type="date" id="FechaInicioAutorizacion" disabled class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <label>Fecha Fin</label>
            </div>
            <div class="col-md-3 mb-1">
                <input type="date" id="FechaFinAutorizacion" disabled class="form-control" />
            </div>
            <div class="col-md-2 mb-1">
                <a class="btn btn-success d-block" onclick="DescargarReporteAutorizacion()" id="btnDescargarReporteAutorizacion">Ver Reporte</a>
            </div>
        </div>
    </div>
</div>
<br />
<div id="divReporteAutorizacion">
    <iframe id="visorReporteAutorizacion" style="width:100%; height:250px;" frameborder="0" scrolling="auto">
    </iframe>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Personal - Activos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="divPersonalAutorizacion">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCerrarPersonalAutorizacion" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/UILayer/Varios/sweetalert.js"></script>
<script src="~/Scripts/UILayer/Varios/generic.js"></script>
<script src="~/Scripts/UILayer/Reporte/Reporte.js"></script>