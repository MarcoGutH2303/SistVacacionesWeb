<table id="tblPanelVacacionesConsumo" class="display table cell-border table-hover pt-2 table-style">
    <thead class="thead-degrad">
        <tr>
            <th>#</th>
            <th>Código</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Dias Uso</th>
        </tr>
    </thead>
    <tbody class="tbody-style">
    </tbody>
</table>

<script>
    var tabladata;
    tabladata = $("#tblPanelVacacionesConsumo").DataTable({
        language: {
            "url": "/Scripts/DataTables/json/es_es.json"
        },
        responsive: true,
        ordering: true,
        "ajax": {
            url: `ListarVacacionesConsumoPersonal/?codVacacionesPeriodo={@ViewData["codVacacionesPeriodo"]}`,
            type: "GET",
            dataType: "json"
        },
        "columns": [
            { "data": "Correlativo" },
            { "data": "CodVacacionesConsumo" },
            { "data": "FechaInicio" },
            { "data": "FechaFin" },
            { "data": "DiasUso" }
        ],
        columnDefs: [
            {
                targets: [2, 3], render: function (data) {
                    return moment(data).format('DD/MM/YYYY');
                }
            }
        ]
    });
</script>
<script src="~/Scripts/UILayer/Varios/moment.js"></script>
